<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="继续批改"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@drawable/background_circle_submit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/button_shape"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="0dp"
                        android:text="批改前"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:background="@drawable/button_shape"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="批改后"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.example.homeworkcorrectteacher.MyListView
                        android:id="@+id/before"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <com.example.homeworkcorrectteacher.MyListView
                        android:id="@+id/after"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Button
                    android:background="@drawable/button_shape_of_correct"
                    android:layout_width="100dp"
                    android:id="@+id/continuebtn"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:layout_height="30dp"
                    android:text="继续批改"/>
            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/background_circle_submit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image2"
                    android:src="@drawable/resulticon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教师解析："/>
                <com.example.homeworkcorrectteacher.ScrollableGridView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image2"
                    android:numColumns="3"
                    android:id="@+id/result_image_gv"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/background_circle_submit"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/evaluateicon"
                    android:id="@+id/image3"
                    android:layout_marginBottom="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教师评语"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/evaluate"/>
                <EditText
                    android:layout_below="@id/image3"
                    android:background="@drawable/correct_text_background"
                    android:id="@+id/correct_self_text"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:hint="你的鼓励是对孩子最大的帮助！"
                    android:ems="15"
                    android:gravity="top"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/submit"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@android:color/white"
                android:text="提交"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape_of_correct"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>