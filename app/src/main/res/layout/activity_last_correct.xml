<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <androidx.appcompat.widget.Toolbar
            android:background="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交批改"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@drawable/background_circle_submit"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image1"
                android:src="@drawable/correcticon"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textSize="17sp"
                android:layout_toRightOf="@id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批改结果："/>
            <com.example.homeworkcorrectteacher.ScrollableGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image1"
                android:numColumns="3"
                android:id="@+id/correct_image_gv"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/background_circle_submit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image2"
                android:src="@drawable/resulticon"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textSize="17sp"
                android:layout_toRightOf="@id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师解析："/>
            <com.example.homeworkcorrectteacher.ScrollableGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image2"
                android:numColumns="3"
                android:id="@+id/result_image_gv"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/background_circle_submit"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/evaluateicon"
                android:id="@+id/image3"
                android:layout_marginBottom="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textSize="17sp"
                android:layout_toRightOf="@id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师评语"
                android:layout_marginBottom="10dp"
                android:id="@+id/evaluate"/>
            <EditText
                android:layout_below="@id/image3"
                android:background="@drawable/correct_text_background"
                android:id="@+id/correct_self_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="5dp"
                android:hint="你的鼓励是对孩子最大的帮助！"
                android:ems="15"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </RelativeLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            android:text="提交"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape_of_correct"
            android:textSize="16sp"/>
    </LinearLayout>


</ScrollView>
